description "proxym Proxy Manager"

start on runlevel [2345]
stop on runlevel [!2345]

respawn
respawn limit 10 5

script
  . /etc/proxym/proxym.conf

  export PROXYM_FILE_CONFIGS_PATH PROXYM_FILE_ENABLED
  export PROXYM_HAPROXY_BINARY_PATH PROXYM_HAPROXY_CONFIG_FILE_PATH PROXYM_HAPROXY_ENABLED PROXYM_HAPROXY_HTTP_PORT PROXYM_HAPROXY_OPTIONS_PATH PROXYM_HAPROXY_PID_PATH
  export PROXYM_MARATHON_HTTP_HOST PROXYM_MARATHON_HTTP_PORT PROXYM_MARATHON_ENABLED PROXYM_MARATHON_ENDPOINT PROXYM_MARATHON_SERVERS
  export PROXYM_SIGNAL_ENABLED

  exec /usr/sbin/proxym
end script
